            android:name=".ui.consultation.online.OnlineConsultationActivity"
            android:exported="false" />
        <activity
            android:name="com.hai.dentist.haidentist.ui.consultation.offline.OfflineConsultationActivity"
            android:exported="false" />
        <activity
            android:name="com.hai.dentist.haidentist.ui.onboarding.OnBoarding"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hai.dentist.haidentist.ui.auth.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.hai.dentist.haidentist.MainActivity"
            android:exported="false" />
