        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_3"
        android:supportsRtl="true"
        android:theme="@style/Theme.HaiDentist"
        tools:targetApi="31">
        <activity
            android:name=".ui.disease.detail.DiseaseDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.consultation.online.ChatActivity"
            android:exported="false" />
        <activity
            android:name="com.hai.dentist.haidentist.ui.doctor.DoctorActivity"
            android:exported="false" />
        <activity
            android:name="com.hai.dentist.haidentist.ui.doctorprofile.DoctorProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.hai.dentist.haidentist.ui.selfcare.SelfcareActivity"
            android:exported="false" />
