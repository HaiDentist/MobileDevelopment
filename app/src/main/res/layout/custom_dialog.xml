<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:lottie_rawRes="@raw/tooth"
                app:lottie_autoPlay="true"
                app:lottie_speed="1.25"
                app:lottie_loop="true"/>

            <TextView
                android:id="@+id/dialog_text"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_medium"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="ini adalah custom dialogini adalah custom dialogini adalah custom dialogini adalah custom dialogini adalah custom dialogini adalah custom dialogini adalah custom dialog "/>

            <Button
                android:id="@+id/btn_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tutup Dialog">

            </Button>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>